@model test.Models.Calendar.MonthModel

@{
    ViewBag.Title = "Calendar";
}


@section featured 
{
    @Html.Partial("_BandHeaderPartial")
}

<span>Events for @Model.CurrentMonth / @Model.CurrentMonthYear</span>

<p class="message-success">@ViewBag.SuccessMessage</p>
<p class="message-error">@ViewBag.ErrorMessage</p>

<table class="pretty" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Time</th>
        <th>Description</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in Model.Events)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.EventId)</td>
            <td>@Html.DisplayFor(modelItem => item.EventTitle)</td>
            <td>@Html.DisplayFor(modelItem => item.EventTime)</td>
            <td>@Html.DisplayFor(modelItem => item.EventDescription)</td>
            <td>@Html.ActionLink("Edit", "EditEvent", new { bandId = ViewBag.BandId, eventId = item.EventId })</td>
        </tr>
    }
</table>


@Html.ActionLink("Last month", "Month", "Calendar", 
                        new { bandId = ViewBag.BandId, month = Model.PreviousMonth, year = Model.PreviousMonthYear }, null)

@Html.ActionLink("Next month", "Month", "Calendar",
                        new { bandId = ViewBag.BandId, month = Model.NextMonth, year = Model.NextMonthYear }, null)
     
<br />                   

@Html.ActionLink("Add event", "AddEvent", "Calendar", new { bandId = ViewBag.BandId }, null)