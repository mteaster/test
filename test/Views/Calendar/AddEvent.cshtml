@model test.Models.Calendar.CalendarEventModel

@{
    ViewBag.Title = "Calendar";
}

<style type="text/css">
    ul, li{
        display: inline-block;
        list-style-type: none;
        padding-right: 10px;
    }
</style>

@using (Html.BeginForm("AddEvent", "Calendar", new { bandId = ViewBag.BandId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Add Event Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.EventTitle)
                @Html.TextBoxFor(m => m.EventTitle)
            </li>
            <li>
                @Html.EditorFor(model => model.EventDescription)
            </li>
            <li>
                @Html.LabelFor(m => m.EventMonth)
                @Html.TextBoxFor(m => m.EventMonth)
            </li>
            
            <li>
                @Html.LabelFor(m => m.EventDay)
                @Html.TextBoxFor(m => m.EventDay)
            </li>
            
            <li>
                @Html.LabelFor(m => m.EventYear)
                @Html.TextBoxFor(m => m.EventYear)
            </li>

        </ol>
        
        <ul>
            <li>
                @Html.LabelFor(m => m.EventHour)
                @{
                    List<SelectListItem> hours = new List<SelectListItem>();
                    hours.Add(new SelectListItem { Text = "1", Value = "1", Selected = true});
                    hours.Add(new SelectListItem { Text = "2", Value = "2" });
                    hours.Add(new SelectListItem { Text = "3", Value = "3" });
                    hours.Add(new SelectListItem { Text = "4", Value = "4" });
                    hours.Add(new SelectListItem { Text = "5", Value = "5" });
                    hours.Add(new SelectListItem { Text = "6", Value = "6" });
                    hours.Add(new SelectListItem { Text = "7", Value = "7" });
                    hours.Add(new SelectListItem { Text = "8", Value = "8" });
                    hours.Add(new SelectListItem { Text = "9", Value = "9" });
                    hours.Add(new SelectListItem { Text = "10", Value = "10" });
                    hours.Add(new SelectListItem { Text = "11", Value = "11" });
                    hours.Add(new SelectListItem { Text = "12", Value = "12" });
                }
               
                @Html.DropDownListFor(m => m.EventHour, hours)
            </li>
            <li>
                @Html.LabelFor(m => m.EventMinute)
                @{
                    List<SelectListItem> min = new List<SelectListItem>();
                    min.Add(new SelectListItem { Text = "1", Value = "1", Selected = true });
                    min.Add(new SelectListItem { Text = "2", Value = "2" });
                    min.Add(new SelectListItem { Text = "3", Value = "3" });
                    min.Add(new SelectListItem { Text = "4", Value = "4" });
                    min.Add(new SelectListItem { Text = "5", Value = "5" });
                    min.Add(new SelectListItem { Text = "6", Value = "6" });
                    min.Add(new SelectListItem { Text = "7", Value = "7" });
                    min.Add(new SelectListItem { Text = "8", Value = "8" });
                    min.Add(new SelectListItem { Text = "9", Value = "9" });
                    min.Add(new SelectListItem { Text = "10", Value = "10" });
                    min.Add(new SelectListItem { Text = "11", Value = "11" });
                    min.Add(new SelectListItem { Text = "12", Value = "12" });
                }
                @Html.DropDownListFor(m => m.EventMinute, min)
            </li>
            <li>
                @Html.LabelFor(m => m.EventPeriod)
                @{
                    List<SelectListItem> period = new List<SelectListItem>();
                    period.Add(new SelectListItem { Text = "1", Value = "1", Selected = true });
                    period.Add(new SelectListItem { Text = "2", Value = "2" });
                    period.Add(new SelectListItem { Text = "3", Value = "3" });
                    period.Add(new SelectListItem { Text = "4", Value = "4" });
                    period.Add(new SelectListItem { Text = "5", Value = "5" });
                    period.Add(new SelectListItem { Text = "6", Value = "6" });
                    period.Add(new SelectListItem { Text = "7", Value = "7" });
                    period.Add(new SelectListItem { Text = "8", Value = "8" });
                    period.Add(new SelectListItem { Text = "9", Value = "9" });
                    period.Add(new SelectListItem { Text = "10", Value = "10" });
                    period.Add(new SelectListItem { Text = "11", Value = "11" });
                    period.Add(new SelectListItem { Text = "12", Value = "12" });
                }
                @Html.DropDownListFor(m => m.EventPeriod, period)
            </li>
        </ul>
        

        
        <br>
        <input type="submit" value="Add Event" />
    </fieldset>
}