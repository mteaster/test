@model test.Models.Band.JoinBandModel

@{
    ViewBag.Title = "Join '" + ViewBag.BandName + "'";
}

<h1 class="five">Join '@ViewBag.Title'</h1>
<h3>Enter the password to join the band.</h3>

<p class="message-error">@ViewBag.ErrorMessage</p>

@using (Html.BeginForm("Join", "Band", new { bandId = ViewBag.BandId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Join Band Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
        </ol>
        <input type="submit" value="Join" />
    </fieldset>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
