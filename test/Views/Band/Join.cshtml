@model test.Models.Band.JoinBandModel

<hgroup class="title">
    <h1>Join '@ViewBag.BandName'.</h1>
    <h2>Do it.</h2>
</hgroup>

<p class="message-error">@ViewBag.ErrorMessage</p>

@using (Html.BeginForm("Join", "Band", new { bandId = ViewBag.BandId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Join Band Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
        </ol>
        <input type="submit" value="Join" />
    </fieldset>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
