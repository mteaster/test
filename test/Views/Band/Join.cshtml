@model test.Models.JoinBandModel

<hgroup class="title">
    <h1>Join "@ViewBag.BandName"</h1>
    <h2>You're dumb.</h2>
</hgroup>

@using (Html.BeginForm("Join", "Band", new { BandId = ViewBag.BandId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Join Band Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
        </ol>
        <input type="submit" value="Search" />
    </fieldset>
}
