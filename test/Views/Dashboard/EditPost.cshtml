@model test.Models.PostMessageModel

@{
    ViewBag.Title = "Dashboard";
}

@section featured 
{
    @Html.Partial("_BandHeaderPartial")
}

@using (Html.BeginForm("EditPost", "Dashboard", new { bandId = ViewBag.BandId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Edit Message Form</legend>
        @Html.EditorFor(model => model.Content)
        <br />
        <input type="submit" value="Post" />
    </fieldset>
}