@model test.Models.PostMessageModel

<h2>Post Message</h2>

@using (Html.BeginForm("Index", "Dashboard", new { bandId = ViewBag.BandId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Post Message Form</legend>
        @Html.EditorFor(model => model.Content)
        <br />
        <input type="submit" value="Post" />
    </fieldset>
}