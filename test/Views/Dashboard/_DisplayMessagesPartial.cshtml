@model IEnumerable<test.Models.MessageBoardPostModel>

<h3>Messages</h3>

@if (Model != null && Model.Any())
{
    <ol class="messages">
        @foreach (var item in Model)
        {
            <li>
                <span class="messageBoardName">@Html.DisplayFor(modelItem => item.PosterName)</span><br />
                <span class="messageBoardTime">@Html.DisplayFor(modelItem => item.PostTime)</span><br />
                <p class="messageBoardMessage">@Html.DisplayFor(modelItem => item.Content)</p>

                @if (item.PosterId == WebSecurity.CurrentUserId)
                {
                    <a id="link-edit" href="" class="messageBoardLink">Edit</a>
                    @Html.ActionLink("Delete", "RemovePost", "Dashboard", new { PostId = item.PostId }, new { @class = "messageBoardLink" })
                }    
            </li>
        }
    </ol>
}
else
{
    <span>No messages found</span>
}

@section scripts
{
     <script type="text/javascript" src="@Url.Content("/Scripts/messageboard.js")"></script>
}