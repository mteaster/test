@model IEnumerable<test.Models.MessageBoardPostModel>

@if (Model != null && Model.Any())
{
    <ul class="messages">
        @foreach (var item in Model)
        {
            <li>
                @Html.DisplayFor(modelItem => item.PosterName)
                @Html.DisplayFor(modelItem => item.Content)
                @Html.DisplayFor(modelItem => item.PostTime)
                @Html.ActionLink("Delete", "RemovePost", "Dashboard", new {PostId = item.PostId}, null)
            </li>
        }
    </ul>
}
else
{
    <span>No messages found</span>
}
