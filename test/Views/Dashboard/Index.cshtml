@model test.Models.Dashboard.DashboardViewModel

@{
    ViewBag.Page = "Dashboard";
    ViewBag.Title = ViewBag.Page + " - " + ViewBag.BandName;
}

@section featured 
{
    @Html.Partial("_BandHeaderPartial")
}

<article>
    <h1 class="five">Message Board</h1>

    <p class="message-success">@ViewBag.SuccessMessage</p>
    <p class="message-error">@ViewBag.ErrorMessage</p>

    @Html.Partial("_PostMessagePartial", new ViewDataDictionary(ViewData) { Model = Model.PostMessageModel } )
    @Html.Partial("_DisplayMessagesPartial", new ViewDataDictionary(ViewData) { Model = Model.DisplayMessagesModel } )
</article>

<aside>
    <h1 class="five">Members</h1>

    @{ Html.RenderAction("Members", "Band", new { bandId = ViewBag.BandId }); }
</aside>

@section scripts
{
     <script type="text/javascript" src="@Url.Content("/Scripts/messageboard.js")"></script>
}