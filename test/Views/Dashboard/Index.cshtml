@model test.Models.PostMessageModel

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard for "@ViewBag.BandId"</h2>

<h5>Message Board</h5>

@ViewBag.StatusMessage

@using (Html.BeginForm("Post", "Dashboard", new { bandId = ViewBag.BandId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
         @Html.EditorFor(model => model.Content)
        <br />
        <input type="submit" value="Post" />
    </fieldset>
}

<hr />
<div>
    <table style="width: 100%;">
        <tr>
            <td>@Html.ActionLink("Rolodex", "Index", "Rolodex", new { bandId = ViewBag.BandId }, null)</td>
            <td>&nbsp;</td>
            <td>@Html.ActionLink("Calendar", "Index", "Calendar")</td>
        </tr>
        <tr>
            <td>@Html.ActionLink("FileCabinet", "Index", "FileCabinet", new { bandId = ViewBag.BandId }, null)</td>
            <td>@Html.ActionLink("Online", "Index", "Online", new { bandId = ViewBag.BandId }, null)</td>
            <td>@Html.ActionLink("Budget", "Index", "Budget", new { bandId = ViewBag.BandId }, null)</td>
        </tr>
     
    </table>
</div>
