@{
    ViewBag.Title = "Files";
}

<div ng-app="files" ng-controller="FilesController">
    <span>hi kids</span>

    <table class="pretty" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <th ng-click="changeSorting('FileId')">File ID</th>
            <th ng-click="changeSorting('FileName')">Name</th>
            <th ng-click="changeSorting('FileDescription')">Description</th>
            <th ng-click="changeSorting('FileType')">Type</th>
            <th ng-click="changeSorting('UploaderName')">Uploader</th>
            <th ng-click="changeSorting('ModifiedTime')">Modified</th>
            <th>Download</th>
            <th>Delete</th>
        </tr>

        <tr ng-repeat="file in files | orderBy : sort.column : sort.descending">
                <td>{{ file.FileId }}</td>
                <td>{{ file.FileName }}</td>
                <td>{{ file.FileDescription }}</td>
                <td>{{ file.FileType}}</td>
                <td>{{ file.UploaderName }}</td>
                <td>{{ file.ModifiedTime }}</td>
                <td><a ng-href="/FileCabinet/DownloadFile?fileId={{ file.FileId }}">Download</a></td>
                <td><a ng-href="/FileCabinet/DeleteFile?fileId={{ file.FileId }}">Delete</a></td>
        </tr>
    </table>
</div>

@section Scripts
{
    <script type="text/javascript">
        var bandId = @ViewBag.BandId;
        var groupId = @ViewBag.GroupId;
    </script>
    <script type="text/javascript" src="@Url.Content("/Scripts/angular.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/files.js")"></script>
}

