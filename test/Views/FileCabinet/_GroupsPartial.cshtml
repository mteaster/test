@model IEnumerable<test.Models.FileCabinet.FileGroup>

@{
    ViewBag.Title = "Files";
}

<table class="pretty" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <th>@Html.DisplayNameFor(model => model.GroupName)</th>
        <th>Upload</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.GroupName, "Files", new { groupId = item.GroupId })</td>
            <td>@Html.ActionLink("Upload", "UploadFile", new { bandId = ViewBag.BandId, groupId = item.GroupId })</td>
        </tr>
    }

</table>