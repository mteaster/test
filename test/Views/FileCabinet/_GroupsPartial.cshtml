@model IEnumerable<test.Models.FileCabinet.FileGroup>

@{
    ViewBag.Title = "Files";
}

<table class="pretty" border="0" cellpadding="0" cellspacing="0">
    <tr>
        <th>@Html.DisplayNameFor(model => model.GroupId)</th>
        <th>@Html.DisplayNameFor(model => model.GroupName)</th>
        <th>Upload</th>
        <th>List</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.GroupId)</td>
            <td>@Html.DisplayFor(modelItem => item.GroupName)</td>
            <td>@Html.ActionLink("Upload", "UploadFile", new { bandId = ViewBag.BandId, groupId = ViewBag.GroupId }</td>
            <td>@Html.ActionLink("List", "ListFiles", new { bandId = ViewBag.BandId, groupId = ViewBag.GroupId}</td>
        </tr>
    }

</table>