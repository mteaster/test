@model test.Models.Account.RegisterUserModel

<section class="blarg">
    <hgroup class="title">
        <h1>Bandit!</h1>
        <h2>A band management platform</h2>
    </hgroup>

    <h3>Getting started is easy:</h3>

    <ol class="round">
        <li class="one">
            <h2>Sign up</h2>
            Register a new account by filling out the form to the right or by clicking the register link.
        </li>

        <li class="two">
            <h2>Create a band</h2>
            After registering and logging in, you can create a new band account. Other members in your band can join your band by searching for the band and entering your band's password.
        </li>

        <li class="three">
            <h2>Rock 'n Roll!</h2>
            Message your bandmates, manage contacts, share files, and much more with the tools located on your band's dashboard.
        </li>
    </ol>
</section>

<section class="half">
    @Html.Partial("_RegisterUserPartial")
</section>