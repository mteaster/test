@model test.Models.ManageAccountViewModel

@{
    ViewBag.Title = "Manage Account";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<p class="message-success">@ViewBag.SuccessMessage</p>
<p class="message-error">@ViewBag.ErrorMessage</p>

<p>You're logged in as <strong>@User.Identity.Name</strong>.</p>

<section class="half">
    @Html.Partial("_ChangePasswordPartial", new ViewDataDictionary(ViewData) { Model = Model.userPasswordModel })
</section>
<section class="half">
    @Html.Partial("_ChangeDisplayNamePartial", new ViewDataDictionary(ViewData) { Model = Model.changeDisplayNameModel })
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
