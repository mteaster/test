@model IEnumerable<test.Models.Rolodex.Contact>

<form method="post">
    <ul style="margin:0; padding-left:0;">
        <li style="list-style-type:none; display:inline-block; padding-right:10px;">
            <label for="Search">Search by:</label>
        </li>
        <li style="list-style-type:none; display:inline-block; padding-right:10px;">
            <input type="radio" name="type" value="band" style="width:auto;" checked /> Band
        </li>
        <li style="list-style-type:none; display:inline-block; padding-right:10px;">
            <input type="radio" name="type" value="people" style="width:auto;" /> People
        </li>
        <li style="list-style-type:none; display:inline-block;">
            <input type="radio" name="type" value="venue" style="width:auto;" /> Venue
        </li>
    </ul>
    <input type="text" name="searchString" />
    <br>
    <input type="submit" value="Search" />
</form>

<br>

<label for="Contacts">Contacts:</label>


    @foreach (test.Models.Rolodex.Contact contact in Model)
    {
        <table style="border:1px solid #C3C3C3; width:inherit">
            <tr>
                <th style="width:100%; text-align:center">@Html.DisplayFor(ModelItem => contact.Name)</th>
            </tr>
            <tr>
                @if (contact.Type == test.Models.Rolodex.ContactType.Venue)
                {
                    <td><img alt="" src="@Url.Action("DownloadVenueAvatar", new { contactId = contact.ContactId })" height="100" width="100" class="photo" /></td>
                }                
                <td>@Html.DisplayFor(ModelItem => contact.ContactId)</td>

                <td>@Html.DisplayFor(ModelItem => contact.Type)</td>
                <td>@Html.DisplayFor(ModelItem => contact.PhoneNumber)</td>
                <td>@Html.DisplayFor(ModelItem => contact.Email)</td>
                <td>@Html.ActionLink("View/Edit", "EditContact", new {bandId = ViewBag.BandId, contactId = contact.ContactId, type = contact.Type})</td>
            </tr>
        </table>
        <br>
    }
