@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}


<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
</hgroup>

<ol>
    <li>
        <h5>Controller</h5>
        @Model.ControllerName
    </li>

    <li>
        <h5>Action</h5>
        @Model.ActionName
    </li>

    <li>
        <h5>Exception string</h5>
        @Model.Exception.ToString()
    </li>
</ol>