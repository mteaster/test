@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}


<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
</hgroup>

<h3>@Model.ControllerName / @Model.ActionName</h3>

<ol class="round">
    <li class="one">
        <h5>@Model.Exception.TargetSite</h5>
        @Model.Exception.Message
    </li>

    <li class="two">
        <h5>@Model.Exception.InnerException.TargetSite</h5>
        @Model.Exception.InnerException.Message
    </li>

    <li class="three">
        <h5>@Model.Exception.InnerException.InnerException.TargetSite</h5>
        @Model.Exception.InnerException.InnerException.Message
    </li>
</ol>