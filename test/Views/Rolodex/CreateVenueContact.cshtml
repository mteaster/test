@model test.Models.Rolodex.VenueContact
@{
    ViewBag.Title = "CreateVenueContact";
}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
@section featured 
{
    @Html.Partial("_BandHeaderPartial")
}
<h2>CreateVenueContact</h2>
@Html.ActionLink("Create Band Contact", "CreateBandContact", new{bandId = ViewBag.BandId})
@Html.ActionLink("Create Person Contact", "CreatePersonContact", new{bandId = ViewBag.BandId})
@Html.ActionLink("Create Venue Contact", "CreateVenueContact", new {bandId = ViewBag.BandId})



@using (Html.BeginForm("CreateVenueContact", "Rolodex", new { bandId = ViewBag.BandId }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
            </li>
            <li>
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.TextBoxFor(m => m.PhoneNumber)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.FreeBeer)
                @Html.CheckBoxFor(m => m.FreeBeer)
            </li>
            <li>
                @Html.LabelFor(m => m.CoverCharge)
                @Html.CheckBoxFor(m => m.CoverCharge)
            </li>
            <li>
                @Html.LabelFor(m => m.MerchSpace)
                @Html.CheckBoxFor(m => m.MerchSpace)
            </li>
            <li>
                @Html.LabelFor(m => m.Notes)
                @Html.TextBoxFor(m => m.Notes)
            </li>
        </ol>
        <input type="submit" value="Save" />
    </fieldset>
}