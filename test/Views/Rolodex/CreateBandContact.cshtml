@model test.Models.Rolodex.BandContact

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
@section featured 
{
    @Html.Partial("_BandHeaderPartial")
}

<h2>Create Band Contact</h2>
@Html.ActionLink("Create Band Contact", "CreateBandContact", new{bandId = ViewBag.BandId})
@Html.ActionLink("Create Person Contact", "CreatePersonContact", new{bandId = ViewBag.BandId})
@Html.ActionLink("Create Venue Contact", "CreateVenueContact", new {bandId = ViewBag.BandId})
@using (Html.BeginForm("CreateBandContact", "Rolodex", new { BandId = ViewBag.BandId }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
            </li>
            <li>
                @Html.LabelFor(m => m.PhoneNumber)
                @Html.TextBoxFor(m => m.PhoneNumber)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.MusicalStyle)
                @Html.TextBoxFor(m => m.MusicalStyle)
            </li>
            <li>
                @Html.LabelFor(m => m.Notes)
                @Html.TextBoxFor(m => m.Notes)
            </li>
        </ol>
        <input type="submit" value="Save" />
    </fieldset>
}
